{
  "compilerOptions":
  {
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": ".",
    "lib": [
      "dom",
      "es2017"
  ],
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "strictNullChecks": true
  }
}